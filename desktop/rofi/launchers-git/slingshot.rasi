configuration {
    font:                           "Noto Sans 10";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

/* -- Light -- */
* {
    background:                     #F5F5F5FF;
    background-alt:                 #F5F5F5FF;
    foreground:                     #000000A6;
    border:               			#80808066;
    selected:               		#D7D7D7FF;
    urgent:                         #DA4453FF;
}

