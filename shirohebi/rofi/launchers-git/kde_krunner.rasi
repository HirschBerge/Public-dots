configuration {
    font:                           "Noto Sans 10";
    show-icons:                     true;
	icon-theme: 					"Breeze";
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

/* -- Breeze Light-- */
* {
    background:                     #EFF0F1FF;
    background-alt:                 #EFF0F1FF;
    foreground:                     #000000A6;
    border:               			#3DAEE9FF;
    selected:               		#93CEE999;
    urgent:                         #DA4453FF;
}

